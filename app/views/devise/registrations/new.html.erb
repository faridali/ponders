<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div>
  	<%= f.text_field :first_name, :placeholder => "First name" %></div>

  <div>
  	<%= f.text_field :last_name, :placeholder => "Last name" %></div> 

  <div>
  	<%= f.text_field :profile_name, :placeholder => "Profile name" %></div>	 	

  <div>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>

  <div>
  <%= f.password_field :password, :placeholder => "Password" %></div>

  <div>
  <%= f.password_field :password_confirmation, :placeholder => "Password confirmation" %></div>

  <div><%= f.submit "Sign up", class: "btn" %></div>
<% end %>

<%= render "devise/shared/links" %>
