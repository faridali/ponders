<%= form_for([@status,slide],:url=>status_slide_path(@status,slide), :method => :put, :html => {:multipart => true}) do |f| %>
  <p>
  <%= f.file_field :image if !slide.image? %>
</p>
    <%= f.submit "Update", class: "btn btn-info" if !slide.image? %>
<% end %>
<p>
<%= link_to 'x', slide_delimg_path(slide), data: { confirm: "Are you sure you want to delete this image?"} if slide.image? %>
</P>