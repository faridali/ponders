<div class="slide-menu">
<!--<%= link_to "Edit", "#", id: "activator" if current_user.statuses.include?(@status) %>-->
<!---<%= link_to "Edit", edit_status_path(@status) %>-->
<%= link_to "Delete Presentation", status_path(@status), method: :delete, data: { confirm: "Are you sure you want to delete this status?"} if current_user.statuses.include?(@status) %>
</div>
<div class="slide-box">
<div class="slide-unit">
<%= form_for(@status,:url=>status_path(@status), :method => :put, :html => {:multipart => true}) do |f| %>
<p>
<%= link_to 'x', status_delimg_path(@status), data: { confirm: "Are you sure you want to delete this image?"} if @status.image? %>
</p>
<%= image_tag @status.image_url(:thumb) if @status.image? %><br>
<%= best_in_place @status, :content, :html_attrs => { :maxlength => 200 } %>
<div class="add_image">
  <%= render :partial => "statuses/form2", :locals => { :status => @status } %>
</div>
</div>
</div>
<% end %>
<div class="container">
	<ul id="slides" data-update-url="<%= sort_slides_url %>">
<% @status.slides.each do |slide| %>
  <%= content_tag_for :li, slide do %>
  <div class="slide-menu">
  <!--<%= link_to "Edit", "#", id: "activator-#{slide.id}" if current_user.statuses.include?(@status) %>-->
<!--   <%= link_to "Edit", edit_status_slide_path(@status,slide) if current_user.statuses.include?(@status) %> -->
 <%= link_to 'x', [slide.status, slide],
               :confirm => 'Are you sure you want to delete this slide?',
               :method => :delete if current_user.statuses.include?(@status) %>
    </div>
<div class="slide-box">
<span class="handle">
<div class="slide-unit">
</span>
<p>
<%= link_to 'x', slide_delimg_path(slide), data: { confirm: "Are you sure you want to delete this image?"} if slide.image? %>
</p>
<%= image_tag slide.image_url(:thumb) if slide.image? %><br>
           <%= best_in_place slide, :content, :path => [@status, slide], :html_attrs => { :maxlength => 200 } %>
<div class="add_image">
  <%= render :partial => "slides/form2", :locals => { :slide => slide } %>
</div>
    </div>
</div>
  <% end %>
<% end %>

</ul>
<a id="form"></a>
<p>
<%= render "slides/form" if current_user.statuses.include?(@status) %>
</p>
<% if @status.publishes.length == 0 %>
<%= form_for([@status, @status.publishes.build]) do |f| %>
   		<%= f.submit "Publish", class: "btn btn-info" %>
	<% end %>
<% else %>
	<%= link_to 'View', status_publishes_path(@status), class: "btn btn-info"  %>
<% end %>
<br>
<br>
