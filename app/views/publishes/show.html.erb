<div id="content">
<small>
  Created by <%= link_to @status.user.full_name, user_profile_path(@status.user.profile_name) %>
  <%= time_ago_in_words(@status.publishes.first.created_at) %> ago
  <br>
  <%= best_in_place @status.user, :description, :type => :input, autolink: :true, activator: '#edit-desc' %>
<a href="#" id="edit-desc" class="hidable">Edit</a>
</small><br><br>
<div class="slide-menu">
<%= link_to 'Edit Deck', status_path(@status), class: "btn btn-mini" if current_user %>
</div>
<div class="slide-box">
	<div class="slide-unit">
		<%= @status.content %>
	</div>
</div>
<% @status.slides.each do |slide| %>
	<div class="slide-box">
		<div class="slide-unit">
			<div id="slide_<%= slide.id %>">
				<%= image_tag slide.image_url(:thumb) if slide.image? %>
				<%= slide.content %>
			</div>
		</div>
	</div>
<% end %>
</div>